<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:BMBot.GUI.Avalonia.Views.Controls"
             xmlns:inventory="clr-namespace:BMBot.GUI.Avalonia.Views.MainWindow.MainWorkspace.AccountManagement.CharacterManagement.Inventory"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             x:Class="BMBot.GUI.Avalonia.Views.MainWindow.MainWorkspace.AccountManagement.CharacterManagement.Inventory.EquipmentSlot"
             x:Name="Root">
    
    <UserControl.Template>
        <ControlTemplate TargetType="inventory:EquipmentSlot">
            <controls:InsetContainer DockPanel.Dock="Top"
                                     Width="{Binding Width, ElementName=Root}"
                                     Height="{Binding Height, ElementName=Root}">
                <Grid Background="#535f6b">
                    <ContentControl Content="{TemplateBinding Content}"/>
                </Grid>
            </controls:InsetContainer>
        </ControlTemplate>
    </UserControl.Template>
    
</UserControl>
